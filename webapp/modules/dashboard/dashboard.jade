input#toggle-backlog.toggle-backlog(type='checkbox', name='toggle-backlog')
#dashboard(data-ng-init='dc.init()')
    header
        | Hack Summit Team
        a.logout(href='#') Logout
        label.toggle-backlog-label(for='toggle-backlog') Backlog

    .info
        p.team
            | Hack Summit Team
            span.fade 7 members
            button(data-ng-click='dc.getCards()') Refresh
            button(data-ng-click='dc.loginWL()' data-ng-hide='isWunderlist') Wunderlist
            button(data-ng-click='dc.loginTrello()' data-ng-hide='isTrello') Trello

    .members
        .container
            .member
                h2.name Name
                ul.todo
                    li(data-ng-repeat='card in dc.cards') {{card.Title}}

    .backlog
        h2.heading
            | Backlog
            span.fade 10 items
            label(for='toggle-backlog').close Close
